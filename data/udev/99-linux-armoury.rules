# Linux Armoury udev rules
# Allow video group to control ASUS keyboard backlight brightness and color
ACTION=="add", SUBSYSTEM=="leds", KERNEL=="asus::kbd_backlight", RUN+="/bin/chgrp video /sys/class/leds/asus::kbd_backlight/brightness /sys/class/leds/asus::kbd_backlight/multi_intensity", RUN+="/bin/chmod g+w /sys/class/leds/asus::kbd_backlight/brightness /sys/class/leds/asus::kbd_backlight/multi_intensity"
ACTION=="change", SUBSYSTEM=="leds", KERNEL=="asus::kbd_backlight", RUN+="/bin/chgrp video /sys/class/leds/asus::kbd_backlight/brightness /sys/class/leds/asus::kbd_backlight/multi_intensity", RUN+="/bin/chmod g+w /sys/class/leds/asus::kbd_backlight/brightness /sys/class/leds/asus::kbd_backlight/multi_intensity"
